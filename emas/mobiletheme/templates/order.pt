<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="emas.theme">
    
<body>

    <metal:core fill-slot="main">
        <script type="text/javascript">
            $('document').ready(function(evt) {
                $('li').hover(
                    function(evt) {
                        $(this).addClass('mouse_over');
                    },
                    function(evt) {
                        $(this).removeClass('mouse_over');
                    }
                );
                $('li').click(function(evt) {
                    $(this).find('input').click();
                    evt.stopPropagation();
                });
                $('li input').click(function(evt) {
                    evt.stopPropagation();
                });
            });
        </script>
        <h1 class="documentFirstHeading">Choose your subject and grade</h1>

        <div id="content-core"
            tal:define="action python:view.action(False);">

            <div tal:condition="context/@@mobile_tool/isMXit">
                Practice is not available for order on Mxit
            </div>

            <div id="individual-order-form" class="selectpackage"
                tal:condition="not:context/@@mobile_tool/isMXit">

                <form id="individual-orderform" name="orderform" 
                      class="update-action" method="POST"
                    tal:attributes="action action;
                                    base_action action;">

                    <input type="hidden" name="mobileorder.form.submitted" value="true"/>
                    <input type="hidden" name="isAnon" value="False" />
                    <input type="hidden" name="ordernumber" value=""
                        tal:attributes="value view/ordernumber"/>

                    <tal:selected tal:define="selected_item view/selected_item">
                    <ul id="table-of-contents" class="visualNoMarker button-links">
                        <h2>Mathematics</h2>
                        <tal:grades repeat="grade python:(8, 9, 10, 11, 12)">
                        <li class="navTreeItem visualNoMarker">
                            <input name="item"
                                   id="subjects-maths-8"
                                   checked=""
                                   value="Maths-8"
                                   tal:attributes="checked python:view.is_selected('Maths-8', selected_item);
                                                   id string:subject-maths-${grade};
                                                   value string:Maths-${grade}"
                                   type="radio" />
                            <label for="subjects-maths-8"
                                   tal:attributes="for string:subjects-math-${grade}"
                                   tal:content="string:Grade ${grade}">Grade 8</label>
                        </li>
                        </tal:grades>
                    </ul>
                    <ul id="table-of-contents" class="visualNoMarker button-links">
                        <h2>Science</h2>
                        <tal:grades repeat="grade python:(10, 11, 12)">
                        <li class="navTreeItem visualNoMarker">
                            <input name="item"
                                   id="subjects-maths-8"
                                   checked=""
                                   value="Maths-8"
                                   tal:attributes="checked python:view.is_selected('Maths-8', selected_item);
                                                   id string:subject-maths-${grade};
                                                   value string:Maths-${grade}"
                                   type="radio" />
                            <label for="subjects-maths-8"
                                   tal:attributes="for string:subjects-math-${grade}"
                                   tal:content="string:Grade ${grade}">Grade 8</label>
                        </li>
                        </tal:grades>
                    </ul>
                    </tal:selected>

                    <ul id="table-of-contents" class="visualNoMarker button-links"
                        tal:define="selected_service view/service;">
                        <h2>Product</h2>
                        <li class="navTreeItem visualNoMarker">
                            <input name="service" 
                                id="service"
                                checked="checked"
                                class="no-textbook" 
                                value="monthly-practice" 
                                type="radio" 
                                price="15" />
                            <label for="service">Practice: one month subscription <strong>R15</strong></label>
                        </li>
                    </ul>
                    
                    <ul id="table-of-contents" class="visualNoMarker button-links">
                        <h2>How would you like to pay?</h2>
                        <li class="button" tal:define="selected view/prod_payment">
                            <input name="prod_payment"
                                id="prod_payment"
                                checked="checked"
                                value="sms"
                                type="radio" />
                            <label for="prod_payment">Premium SMS</label>
                        </li>
                    </ul>
                    <div class="ordertotal">
                        <button type="submit" class="button generic no-icon small-caps allowMultiSubmit" name="submitorder" value="1">Order</button>
                    </div>
                </form>
            </div>
        </div>

    </metal:core>

</body>
</html>
