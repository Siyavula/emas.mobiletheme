<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="emas.theme">
    
<body>

    <metal:core fill-slot="main">
        <script type="text/javascript">
            $('document').ready(function(evt) {
                $('li').hover(
                    function(evt) {
                        $(this).addClass('mouse_over');
                    },
                    function(evt) {
                        $(this).removeClass('mouse_over');
                    }
                );
                $('li').click(function(evt) {
                    $(this).find('input').click();
                    evt.stopPropagation();
                });
                $('li input').click(function(evt) {
                    evt.stopPropagation();
                });
            });
        </script>
        <h1 class="documentFirstHeading">Order form</h1>

        <div id="content-core"
            tal:define="action python:view.action(False);">

            <div tal:condition="context/@@mobile_tool/isMXit">
                Intelligent Practice is not available for order on Mxit
            </div>

            <div id="individual-order-form" class="selectpackage"
                tal:condition="not:context/@@mobile_tool/isMXit">

                <form id="individual-orderform" name="orderform" 
                      class="update-action" method="POST"
                    tal:attributes="action action;
                                    base_action action;">

                    <input type="hidden" name="order.form.submitted" value="true"/>
                    <input type="hidden" name="isAnon" value="False" />
                    <input type="hidden" name="ordernumber" value=""
                        tal:attributes="value view/ordernumber"/>
                    
                    <ul id="table-of-contents" class="visualNoMarker button-links"
                        tal:define="selected_subjects view/subjects;">
                        <h2>Subject</h2>
                        <li class="navTreeItem visualNoMarker">
                            <input name="subjects"
                                   id="subjects-maths"
                                   checked=""
                                   tal:attributes="checked python:view.subject_selected('Maths', selected_subjects)"
                                   value="Maths"
                                   type="radio" />
                            <label for="subjects-maths">Maths</label>
                        </li>
                        <li class="navTreeItem visualNoMarker">
                            <input name="subjects"
                                   id="subjects-science"
                                   checked=""
                                   tal:attributes="checked python:view.subject_selected('Science', selected_subjects)"
                                   value="Science"
                                   multiplier="1"
                                   type="radio" />
                            <label for="subjects-science">Physical Sciences</label>
                        </li>
                    </ul>

                    <ul id="table-of-contents" class="visualNoMarker button-links"
                        tal:define="selected_grade view/grade">
                        <h2>Grade</h2>
                        <li class="navTreeItem visualNoMarker">
                            <input name="grade"
                                   id="grade10"
                                   checked=""
                                   tal:attributes="checked python:view.grade_selected('grade10', selected_grade)"
                                   value="grade10"
                                   type="radio" />
                            <label for="grade10">Grade 10 (CAPS)</label>
                        </li>
                        <li class="navTreeItem visualNoMarker">
                            <input name="grade" 
                                   id="grade11"
                                   checked=""
                                   tal:attributes="checked python:view.grade_selected('grade11', selected_grade)"
                                   value="grade11" 
                                   type="radio" />
                            <label for="grade11">Grade 11 (CAPS)</label>
                        </li>

                        <li class="navTreeItem visualNoMarker">
                            <input name="grade"
                                   id="grade12"
                                   checked=""
                                   tal:attributes="checked python:view.grade_selected('grade12', selected_grade)"
                                   value="grade12" 
                                   type="radio" />
                            <label for="grade12">Grade 12 (CAPS)</label>
                        </li>
                    </ul>

                    <ul id="table-of-contents" class="visualNoMarker button-links"
                        tal:define="selected_product view/prod_practice_book;">
                        <h2>Product</h2>
                        <li class="navTreeItem visualNoMarker">
                            <input name="prod_practice_book" 
                                id="prod_practice_book"
                                checked=""
                                tal:attributes="checked python:view.prod_practice_book_selected('Practice', selected_product)"
                                class="no-textbook" 
                                value="monthly-practice" 
                                type="radio" 
                                price="15" />
                            <label for="prod_practice_book">Intelligent Practice one month subscription <strong>R15</strong></label>
                        </li>
                    </ul>
                    
                    <ul id="table-of-contents" class="visualNoMarker button-links">
                        <h2>How would you like to pay?</h2>
                        <li>
                        <li class="button" tal:define="selected view/prod_payment">
                            <input name="prod_payment"
                                id="prod_payment"
                                checked="checked"
                                value="sms"
                                type="radio" />
                            <label for="prod_payment">Premium SMS</label>
                        </li>
                    </ul>
                    <div class="ordertotal">
                        <button type="submit" class="button generic no-icon small-caps allowMultiSubmit" name="submitorder" value="1">Submit
                        </button>
                    </div>
                </form>
            </div>
        </div>

    </metal:core>

</body>
</html>
