<div id="search-box-bottom" class="clear"  tal:condition="not: context/@@mobile_tool/isLowEndPhone">
	<h2>Search</h2>
	<form action="@@emas.search">
		<table width="100%" cellspacing="0" cellpadding="0">
			<tbody>
				<tr>
					<td class="searchBar">
						<input  id="searchboxbottom"
								type="text" 
								name="SearchableText" 
								title="Search Site" 
								i18n:attributes="title title_search_title;"
								value=""
								class="searchfield" />
					</td>
					<td class="searchBtn">
						<input type="submit" value="Go" class="button">
					</td>
				</tr>
			</tbody>
		</table>
	</form>
</div>
